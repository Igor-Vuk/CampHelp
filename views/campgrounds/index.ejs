<% include ../partials/header %>

<div class="container"> 
    
    <header class="jumbotron">
        <div class="container text-center">
            <h1>Welcome to CampHelp</h1>
            <p>View our hand-picked campground from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div><!-- container -->    
    </header>
    
    <div class="row" style="display: flex; flex-wrap: wrap;">
        
        <% campgrounds.forEach(function(campground) { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campground.image %>">
                        <div class="caption">
                            <h4><%= campground.name %></h4>
                        </div><!-- caption -->
                        <p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary" style="margin-left:5px;">More Info</a>
                        </p>
                    </div><!-- thumbnail -->
                </div>
        <% }) %>
         
    </div><!-- row -->

</div><!-- container -->

<% include ../partials/footer %>